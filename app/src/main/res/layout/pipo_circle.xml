<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mobi.pipo.circleprogressbar.MainActivity"
    android:background="@android:color/background_light">

    <ProgressBar
        android:id="@+id/progressBarDotted"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:max="100"
        android:progress="60"
        android:progressDrawable="@drawable/circular"
        android:layout_alignParentTop="true"
        android:indeterminate="false"
        android:layout_centerInParent="true"
        android:padding="5dp" />
    <ProgressBar
        android:id="@+id/progressBarInvisible"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/invisible_bkg"
        android:layout_alignParentTop="true"
        android:indeterminate="false"
        android:layout_centerInParent="true"
        android:rotation="-90"
        android:padding="5dp" />

    <ProgressBar
        android:id="@+id/progressBarPoint"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/point"
        android:layout_alignParentTop="true"
        android:indeterminate="false"
        android:layout_centerInParent="true"
        android:rotation="-90"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100%"
        android:id="@+id/percent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:textSize="30dp" />
</RelativeLayout>
